<% content_for(:title, 'Edit Profile') %>
<%= render '/posts_shared/nav' %>
<div class="col-lg-4 container shadow mt-5 pt-4 pl-3 pb-4 profile mb-5">
  <%= bootstrap_form_with(model: @user, method: :patch, local: true) do |f| %>
    <div class="d-flex justify-content-between">
      <div class="d-flex">
        <%= link_to :back do %>
          <i class="fas fa-times" style="font-size: 1.4rem"></i>
        <% end %>
        <h4 class="mb-3 ml-3">Edit Profile</h4>
      </div>
      <div class="actions">
        <%= f.submit "Save", class: "btn text-white rounded-pill bg-color" %>
      </div>
    </div>
    <hr class="solid">

    <p style="font-size: 1.5rem"><%= f.label :avatar %></p>
    <div class="d-flex justify-content-center mb-3">
      <%= image_tag(current_user.avatar_thumbnail, :class => "rounded-circle mr-2", size: "100x100", alt: "Profile pic") %>
    </div>

    <div class="field mb-4">
      <%= f.file_field :avatar, autofocus: true, class: "bg-light", hide_label: true %>
    </div>

    <p style="font-size: 1.5rem"><%= f.label :header %></p>
    <div class="d-flex justify-content-center mb-3">
      <%= image_tag(current_user.header_thumbnail, class: "img-fluid mb-3", alt: "header") %>
    </div>

    <div class="field mb-4">
      <%= f.file_field :header, autofocus: true, class: "bg-light", hide_label: true %>
    </div>

    <div class="field mb-4">
      <%= f.text_field :bio, autofocus: true, class: "bg-light" %>
    </div>

    <div class="field mb-4">
      <%= f.date_field :birthday, autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_field :location, autofocus: true %>
    </div>
  <% end %>
</div>

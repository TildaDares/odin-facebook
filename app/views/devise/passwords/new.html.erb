<% content_for(:title, 'Forgot Password') %>
<div class="pb-5">
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="pt-2 shadow pb-4 mt-5 container col-lg-5 mb-5 col-md-6">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-black bg-light" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn shadow btn-block bg-color text-white mt-3" %>
      </div>
    </div>
  <% end %>
</div>
